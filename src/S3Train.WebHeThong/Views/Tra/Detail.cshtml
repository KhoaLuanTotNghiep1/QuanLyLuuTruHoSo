@using S3Train.WebHeThong.Models
@model MuonTraViewModel

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_LayoutAdminPage.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Thông Tin Chi Tiết Phiếu Trả</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Tra")">Tra</a></li>
        <li class="breadcrumb-item active" aria-current="page">Detail</li>
    </ol>
</div>

<div class="row">
    <div class="col-lg-9">
        <div class="card mb-4">
            <div class="card-body" id="b">
                <div class="row">
                    <div class="col-lg-4">
                        <h6 class="m-0 font-weight-bold text-primary">Người Trả</h6>
                        <p>@Html.DisplayFor(item => Model.User.FullName)</p>
                    </div>
                    <div class="col-lg-4">
                        <h6 class="m-0 font-weight-bold text-primary">Tài Khoản</h6>
                        <p>@Html.DisplayFor(item => Model.User.UserName)</p>
                    </div>
                    <div class="col-lg-4">
                        <h6 class="m-0 font-weight-bold text-primary">Số Lượng Trả</h6>
                        <p>@Html.DisplayFor(item => Model.SoLuong) văn bản</p>
                        <input value="@Model.SoLuong" type="hidden" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4">
                        <h6 class="m-0 font-weight-bold text-primary">Văn Thư</h6>
                        <p>@Html.DisplayFor(item => Model.VanThu)</p>

                    </div>
                    <div class="col-lg-4">
                        <h6 class="m-0 font-weight-bold text-primary" id="NgayMuon">Ngày Mượn</h6>
                        <p>@Html.DisplayFor(item => Model.NgayMuon)</p>
                    </div>
                    <div class="col-lg-4">
                        <h6 class="m-0 font-weight-bold text-primary">Ngày Trả</h6>
                        <p>@Html.DisplayFor(item => Model.NgayTra)</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3">
        <div class="row">
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col">
                                <div class="text-xs font-weight-bold text-uppercase mb-1">Trạng Thái</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@Html.Partial("~/Views/Shared/_PartialTrangThai.cshtml", Model.TrangThai)</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-calendar fa-2x text-primary"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col">
                                <div class="text-xs font-weight-bold text-uppercase mb-1">Tình Trạng</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@Html.Partial("~/Views/Shared/_PartialTinhTrangLuuTru.cshtml", Model.TinhTrang)</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-calendar fa-2x text-primary"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (Model.ChiTietMuonTras.Count() > 0)
{
    <div class="row">
        <div class="col-lg-6 col-md-9">
            <h3 class="text-primary">Danh Sách Văn Bản Của Phiếu Mượn</h3>
            <div class="card">
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Tên Văn Bản</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ChiTietMuonTras)
                            {
                               
                                <tr>
                                    <td>@item.TaiLieuVanBan.Ten</td>
                                </tr>
                               

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}

@section  scripts{
    <script>
        $(function () {
            var successMessage = '@TempData["AlertMessage"]'
            if (successMessage != '')
                alertify.success(successMessage);
        });
    </script>
}


