@using S3Train.Model.User
@model UserViewModel

@using (Html.BeginForm("ChangeRole", "User", FormMethod.Post))
{

    <button type="button" title="Thay Đổi Quyền Truy Cập" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal@(Model.Id)">
        <i class="fas fa-sync"></i>
    </button>
    <a href="@Url.Action("Delete","User", new { id = Model.Id})" class="btn btn-danger" onclick="return confirm('Bạn Có Chắc Muốn Xóa @Model.FullName?');" title="Xóa">
        <i class="fas fa-trash"></i>
    </a>
    @Html.HiddenFor(m => Model.Id)

    @Html.AntiForgeryToken()
    <div class="modal fade" id="exampleModal@(Model.Id)" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Thay Đổi Quyền Truy Cập</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group row">
                        <div class="col">
                            <label>@Html.DisplayNameFor(item => Model.Role)</label>
                            @Html.DropDownListFor(m => m.Role, new SelectList(ViewBag.Roles, "Value", "Text"), new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary">Lưu</button>
                </div>
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
