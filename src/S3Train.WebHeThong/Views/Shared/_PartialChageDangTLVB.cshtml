@using S3Train.WebHeThong.Models
@model TaiLieu_VanBanViewModel

<button type="button" title="Gửi đi" class="btn btn-light btn-group-lg" data-toggle="modal" data-target="#exampleModal@(Model.Id)">
    <i class="fas fa-arrow-alt-circle-right"></i>
</button>

@using (Html.BeginForm("ChangeDangForTLVB", "TaiLieuVanBan", FormMethod.Post))
{

    @Html.AntiForgeryToken()
    <div class="modal fade" id="exampleModal@(Model.Id)" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Gửi tài Liệu / Văn Bản</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @Html.HiddenFor(model => model.Id)
                    <div class="form-group">
                        <label class="control-label col-md">Tên Tài Liệu/Văn Bản</label>
                        <div class="col-md">
                            <i class="text-primary">@Model.Ten</i>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.NoiNhan, htmlAttributes: new { @class = "control-label col-md" })
                        <div class="col-md">
                            @Html.EditorFor(model => model.NoiNhan, new { htmlAttributes = new { @class = "form-control", @placeholder = "Địa chỉ nhận tài liệu/văn bản" } })
                            @Html.ValidationMessageFor(model => model.NoiNhan, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary">Lưu</button>
                </div>
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
