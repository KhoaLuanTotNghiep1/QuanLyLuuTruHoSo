@using S3Train.WebHeThong.Models
@model IEnumerable<RoleViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdminPage.cshtml";
    int stt = 1;
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Quyền Truy Cấp</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("DanhSach","QuyenTruyCap")">QuyenTruyCap</a></li>
        <li class="breadcrumb-item active" aria-current="page">DanhSach</li>
    </ol>
</div>

<div class="card">
            <div class="card-body">
                @*@Html.Partial("_PartialCreateOrUpdateRole", new RoleViewModel())*@
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>
                                @Html.DisplayNameFor(m => m.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(m => m.CountUser)
                            </th>
                            <th>
                                @Html.DisplayNameFor(m => m.Description)
                            </th>
                            @*<th>Hoạt Động</th>*@
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tbody>
                            <tr>
                                <td>@stt</td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CountUser) người dùng
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                @*<td class="row">
                                    <div class="col-md-auto">
                                        @Html.Partial("_PartialCreateOrUpdateRole", item)
                                    </div>
                                </td>*@
                            </tr>
                        </tbody>
                        stt += 1;
                    }

                </table>
            </div>
        </div>
@section scripts{
    <script>
        $(function () {
            var successMessage = '@TempData["AlertMessage"]'
            if (successMessage != '')
                alertify.success(successMessage);
        });
    </script>
}